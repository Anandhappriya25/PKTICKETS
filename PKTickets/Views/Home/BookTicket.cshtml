@using PKTickets.Models.DTO
@model BookTicketDTO
@{
    string name = "Submit";
    string title = "Book Ticket";
    if (Model.ReservationId > 0)
    {
        title = "Edit Ticket";
        name = "Update";
    }
    Layout = "~/views/shared/_userlayout.cshtml";

}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="~/css/logo/logo.jpg" class=" rounded-4 shadow-4" alt="f" />
            <p>Welcome to PKTickets</p>
            <p>You can Easily Book Movie Tickets With the Help of PKTicKets </p>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading"> @title </h3>
                    <div class="row register-form">
                        @using (Html.BeginForm(FormMethod.Post, new { id = "BookTicket" }))
                        {
                            @Html.HiddenFor(m => m.ReservationId )
                            @Html.HiddenFor(m => m.ScheduleId )

                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">User Name</label>
                                </div>
                                <div class="col-5">
                                    @Html.DropDownListFor(m => m.UserId ,Model.Users, new {@class="form-control"} )
                                </div>
                            </div>
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                        <label class="form-label required">Premium Ticket</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.TextBoxFor(m => m.PremiumTickets , new {@class="form-control",type ="number", required = "required" ,min="0", max = "10"})
                                    </div>
                                </div>
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                    <label class="form-label required">Elite Ticket</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.TextBoxFor(m => m.EliteTickets , new {@class="form-control",type ="number", required = "required" ,min="0", max = "10"})
                                    </div>
                                </div>

                            <input type="submit" class="btnRegister" value="@name" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <link href="~/css/layout.css" rel="stylesheet" />
     <script src="~/js/bookticket.js"></script>
}
}