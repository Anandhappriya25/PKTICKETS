@using PKTickets.Models
@model Movie
@{
    string name = "Submit";
    string title = "Movie Form";

    if (Model.MovieId > 0)
    {
        title = "Edit Movie";
        name = "Update";
    }
    Layout = "~/views/shared/_userlayout.cshtml";

}




<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="~/css/logo/logo.jpg" class=" rounded-4 shadow-4" alt="f" />
            <p>Welcome to PKTickets</p>
            <p>You can Add an Movie for Easy Booking</p>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading"> @title </h3>
                    <div class="row register-form">
                        @using (Html.BeginForm("Add","Home",FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(m => m.MovieId )

                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Movie Name</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Title , new {@class="form-control", required = "required" , maxlength = "20"} )
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Language</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Language , new {@class="form-control", required = "required" , maxlength = "20"})
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Director</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Director , new {@class="form-control", required = "required" , maxlength = "20"})
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Genre</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Genre , new {@class="form-control", required = "required" , maxlength = "20"})
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Duration</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Duration , new {placeholder="In Minutes",@class="form-control", required = "required" ,type ="number",min = "60" ,max = "300"})
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">CastAndCrew</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextAreaFor(m => m.CastAndCrew , new {@class="form-control", required = "required" , maxlength = "50"})
                                </div>
                            </div>
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Movie Photo</label>
                                </div>
                                <div class="col-5">
                                    <input type="file" name="CoverPhoto" required>
                                </div>
                            </div>
                            <input type="submit" class="btnRegister" value="@name" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{  
    <link href="~/css/layout.css" rel="stylesheet" />
}