@using PKTickets.Models
@model Theater
@{
    string name = "Submit";
    string title = "Theater Form";
    if (Model.TheaterId > 0)
    {
        title = "Edit Theater";
        name = "Update";
    }
    Layout = "~/views/shared/_userlayout.cshtml";

}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="~/css/logo/logo.jpg" class=" rounded-4 shadow-4" alt="f" />
            <p>Welcome to PKTickets</p>
            <p>You can Add Your Theater for Easy Booking</p>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content align" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading"> @title </h3>
                    <div class="row register-form">
                        @using (Html.BeginForm(FormMethod.Post, new { id = "AddTheater" }))
                        {
                            @Html.HiddenFor(m => m.TheaterId )

                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Theater Name</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.TheaterName , new {@class="form-control", required = "required" , maxlength = "20"} )

                                </div>
                            </div>
                           
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Location</label>
                                </div>
                                <div class="col-5">
                                    @Html.TextBoxFor(m => m.Location , new {@class="form-control", required = "required" , maxlength = "20"})
                                </div>
                            </div>
                           
                            <input type="submit" class="btnRegister" value="@name" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

@section scripts{
    <script src="~/js/addtheater.js"></script>
    <link href="~/css/layout.css" rel="stylesheet" />
}