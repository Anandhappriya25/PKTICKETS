@using PKTickets.Models.DTO
@model CreateSchedule
@{
    var minDate = DateTime.Now.ToString("yyyy-MM-dd");
    string name = "Submit";
    string title = "Schedule Form";
    if (Model.ScheduleId > 0)
    {
        title = "Edit Schedule";
        name = "Update";
    }
    Layout = "~/views/shared/_userlayout.cshtml";

}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="~/css/logo/logo.jpg" class=" rounded-4 shadow-4" alt="f" />
            <p>Welcome to PKTickets</p>
            <p>You can Add a Schedule for Easy Booking</p>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading"> @title </h3>
                    <div class="row register-form">
                        @using (Html.BeginForm(FormMethod.Post, new { id = "AddSchedule" }))
                        {
                            @Html.HiddenFor(m => m.ScreenId )
                            @Html.HiddenFor(m => m.AvailableEliSeats )
                            @Html.HiddenFor(m => m.AvailablePreSeats )
                            <div class="mb-3  row justify-content-center">
                                <div class="col-3">
                                    <label class="form-label required">Movie</label>
                                </div>
                                <div class="col-5">
                                    @Html.DropDownListFor(m => m.MovieId ,Model.Movies, new {@class="form-control"} )
                                    </div>
                            </div>
                            @if (Model.ScheduleId == 0)
                            {
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                        <label class="form-label required">Date</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.TextBoxFor(m => m.Date , new {@class="form-control", required = "required" ,type="date",min=minDate} )
                                    </div>
                                </div>
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                        <label class="form-label required">ShowTime</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.DropDownListFor(m => m.ShowTimeId ,Model.Times, new {@class="form-control"} )
                                    </div>
                                </div>
                            }
                            else{
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                        <label class="form-label required">Date</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.TextBoxFor(m => m.Date , new {@class="form-control",@disabled="disabled"})
                                    </div>
                                </div>
                                <div class="mb-3  row justify-content-center">
                                    <div class="col-3">
                                        <label class="form-label required">ShowTime</label>
                                    </div>
                                    <div class="col-5">
                                        @Html.DropDownListFor(m => m.ShowTimeId ,Model.Times, new {@class="form-control",@disabled="disabled"})
                                    </div>
                                </div>
                            }
                                               
                            <input type="submit" class="btnRegister" value="@name" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/addschedule.js"></script>
    <link href="~/css/layout.css" rel="stylesheet" />
}