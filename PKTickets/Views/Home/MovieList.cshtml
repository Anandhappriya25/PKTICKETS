
@using PKTickets.Models
@model List<Movie>
@{
    Layout = "~/views/shared/_userlayout.cshtml";
}
<a class=" text-black mb-3"  title="Add User" asp-area="" asp-controller="Home" asp-action="CreateUser">
    <i class="fa-regular fa-square-plus Add"></i>

</a>
<div id="heading">Movies List</div>




<div class="container-fluid ">
    <div class="row row-cols-4 row-cols-sm-4 row-cols-md-4 row-cols-lg-4">
 @foreach (Movie movie in Model)
        {
            <div class="card" style="width:18rem;margin-right:36px;margin-top:49px;">
                <img class="card-img-top" style="margin-top:12px;"src="~/css/image/5cee5bc2-6d70-4169-9066-af720fcdddda.jpg" alt="Card image top">
    <div class="card-body">
        <h3 class="card-title">@movie.Title</h3>
        <h4 class="card-subtitle">@movie.Director</h4>
        <p class="card-text">@movie.CastAndCrew</p>
    </div>
</div>
        }
        </div>
        </div>


@section scripts{  
    <link href="~/css/theaters.css" rel="stylesheet" />
}

