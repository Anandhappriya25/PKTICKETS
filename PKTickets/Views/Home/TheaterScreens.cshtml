@using PKTickets.Models.DTO
@model ScreensListDTO
@{
    Layout = "~/views/shared/_userlayout.cshtml";
}

<div class="row">
    <div id="heading">
       Screens
    </div>
</div>


<a class=" text-black mb-3" id="add" title="Add Screen" asp-area="" asp-controller="Home" asp-action="AddScreen" asp-route-id="@ViewBag.csd">
    <i class="fa-regular fa-square-plus Add"></i>
   
</a>
<div class="container" style="float:left">
    <div class="row ">
        <div class="col-4">
            <h5>
                Theater Name :     
                <b> @Model.TheaterName</b>
            </h5>
        </div>
    </div>
</div>
<table class="table table-hover pt-2" id="dataTable">
    <thead class="text-dark" id="thead">
        <tr>
            <th>Screen Id</th>
            <th class="text-center">Screen Name</th>
            <th class="text-center">Premium Capacity</th>
            <th class="text-center">Elite Capacity</th>
            <th class="text-center">Premium Price</th>
            <th class="text-center">Elite Price</th>
            <th class="text-center" data-orderable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ScreensDTO screen in Model.Screens)
        {
            <tr class="text-center align-text-bottom">
                <td>@screen.ScreenId</td>
                <td>
                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="ReservationsByUserId" asp-route-id="@screen.ScreenId">
                        @screen.ScreenName
                    </a>
                </td>
                <td>@screen.PremiumCapacity</td>
                <td>@screen.EliteCapacity</td>
                <td>@screen.PremiumPrice</td>
                <td>@screen.ElitePrice</td>
                <td >

                    <a class="nav-link text-success" id="edt" title="Edit" asp-area="" asp-controller="Home" asp-action="EditScreen" asp-route-id="@screen.ScreenId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>


                    <a class="nav-link text-danger" id="delete" title="Delete" asp-area="" onclick="ScreenDelete(@screen.ScreenId)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5
                            .5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.
                             5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                            </svg>
                        </a>
                  
                </td>
            </tr>
        }    
    </tbody>
</table>

@section scripts{

    <link href="~/css/color.css" rel="stylesheet" />
    <link href="~/css/screenlist.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />  
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script>$(document).ready(function () { $("#dataTable").DataTable(); })</script>
    <script src="~/js/screendelete.js"></script>
}

