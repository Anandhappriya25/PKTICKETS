    <div class="row row-cols-3 row-cols-sm-3 row-cols-md-3 row-cols-lg-3">
    @foreach (Screen screen in Model)
    {
        <div class="card size">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MovieSchedules" asp-route-sId="@screen.ScreenId" asp-route-mId="@ViewBag.mId">
            <div class="card-body">
                
                <div class="row">
                    <div class="head">
                        ScreenName
                    </div>
                    <div class="value">
                        :  @screen.ScreenName
                        
                    </div>
                </div>
                <div class="row ad">
                    <div class="head">
                        Premium Capacity
                    </div>
                    <div class="value">
                        :  @screen.PremiumCapacity
                    </div>
                </div>
                <div class="row">
                    <div class="head">
                        Premium Price
                    </div>
                    <div class="value">
                        :  @screen.PremiumPrice
                    </div>
                </div>
                <div class="row">
                    <div class="head">
                        Elite Capacity
                    </div>
                    <div class="value">
                        :  @screen.EliteCapacity
                    </div>
                </div>
                <div class="row">
                    <div class="head">
                        Elite Price
                    </div>
                    <div class="value">
                        :  @screen.ElitePrice
                    </div>
                </div>
               
            </div>
            </a>
        </div>
    }
</div>